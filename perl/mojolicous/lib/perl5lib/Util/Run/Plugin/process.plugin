#   8  process_submit    : 机构进程模块
EOF


#
# $initor->();
#
sub {
    $SIG{'PIPE'} = 'IGNORE';
    $SIG{'TERM'} = sub { zkernel->process_sigterm; };   # termination
    $SIG{'CHLD'} = sub { zkernel->process_sigchld; };   # restart the died
    $SIG{'HUP'}  = 'DEFAULT';     # very important
    return 1;
};

